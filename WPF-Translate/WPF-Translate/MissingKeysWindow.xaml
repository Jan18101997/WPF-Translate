<Controls:MetroWindow
    x:Class="de.LandauSoftware.WPFTranslate.MissingKeysWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:de.LandauSoftware.WPFTranslate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Fehlende Schlüssel"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <ListView x:Name="listView" Margin="10">
        <ListView.GroupStyle>
            <GroupStyle>
                <GroupStyle.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{Binding Name}" />
                    </DataTemplate>
                </GroupStyle.HeaderTemplate>
            </GroupStyle>
        </ListView.GroupStyle>
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Key}" Header="Key" />
                <GridViewColumn DisplayMemberBinding="{Binding FullMatch}" Header="Voller Fund" />
            </GridView>
        </ListView.View>
    </ListView>
</Controls:MetroWindow>
